extends ../layout/admin
block styles
  link(rel='stylesheet', href='https://unpkg.com/leaflet@1.8.0/dist/leaflet.css')
  link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.3/dropzone.css')
  meta(name='csrf-token', content=csrfToken)
block contenido
  .py-10
    h1.text-4xl.my-10.font-extrabold.text-center Bienes
      span.font-normal Raices
    h2.text-center.text-2xl.font-extrabold= pagina

    .bg-white.shadow.py-8.px-4.rounded.mx-auto.max-w-4xl.my-10(class='md:px-10')
      form#imagen.dropzone.border-dashed.border-2.w-full.h-auto.rounded.flex-col.justify-center.items-center(
        class='min:h-96',
        action=`/propiedades/agregar-imagen/${propiedad.id}`,
        method='POST'
      )
        input(type='hidden', name='_csrf', value=csrfToken)

      button#publicar.mt-5.w-full.py-3.bg-indigo-600.rounded.text-white.font-bold(type='button', class='hover:bg-indigo-700') Publicar Propiedad

block scripts
  script(src='/js/agregarImagen.js')
